sh_setEnvironment
sh_getLocale
sh_setLanguage
sh_setVarColors
sh_setAsciiLines
sh_setLogPrefix
[[ "$1" = @(-V|--version) ]] && {
	sh_version
	exit $(($# ? 0 : 1))
}
[[ -z "$1" || "$1" = @(-h|--help) ]] && {
	sh_usage
	exit $(($# ? 0 : 1))
}
sh_checkDependencies
sh_checkDisplay
sh_loadSavedConfig
sh_disablePrintk
sh_init "$@"

# sanity checks
case $((LINSTALL + LCHROOT)) in
0) die "${cmsg_Operacao[$LC_DEFAULT]}" ;;
[^1]) die "${cmsg_OneOperacao[$LC_DEFAULT]}" ;;
esac
sh_setMknodTty
#sh_menu_language "$@"
for x in "${appexec[@]}"; do $x; done
sh_enablePrintk
