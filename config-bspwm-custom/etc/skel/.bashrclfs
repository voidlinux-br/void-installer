alias cls=clear
alias md=mkdir
alias del=rm
export repo

manzip() {
	log_wait_msg "Gziping arquivos man files..."
	pushd $repo
	find $repo/usr/share/man/ -iname '*[0-9]' -type f -exec gzip -9 -f {} \;
	popd
}

mk() {
   LC_ALL=POSIX
	BASE=$(basename $PWD)
	PKG=$LFS/repo/$BASE-1-x86_64
   repo=$PKG
   mkdir -p $repo
	make -j8 "$@"
   make -j8 "$@" DESTDIR=$LFS install
   make -j8 "$@" DESTDIR=$PKG install
	pushd $PKG
      log_wait_msg "Gziping arquivos man files..."
      find $repo/usr/share/man/ -iname '*[0-9]' -type f -exec gzip -9 -f {} \;
		fetch -Sg -f
		fetch -C
      cd ..
      fetch -Sl $PKG --noconfirm
	popd
   LC_ALL=pt_BR.UTF8
}

